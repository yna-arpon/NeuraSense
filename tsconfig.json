	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"inlineSourceMap": true,
		"outDir": "dist"
	},
	"include": ["./src"]
}
